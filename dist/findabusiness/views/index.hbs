<div class="col">
  <h2 class="header"> {{Title}}</h2>
  <div class="card horizontal hoverable">
    <div class="card-image">
      <img src="http://lorempixel.com/100/190/nature/6">
    </div>
    <div class="card-stacked">
      <div class="card-content">
        <div class="row">
          <form class="col s12" id='searchQuery' action='/search'method>
            <div class="row">
              <div class="input-field col s12">
                <input placeholder='Waymark' id="busniess" type='text' class="validate"></textarea>
                <label for="business">Business</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12 m6">
                <input placeholder='48226' id="postalcode" type='tel' class="validate" maxlength="5">
                <label data-error='Not a Number.' for="postalcode">Postal Code</label>
              </div>
              <div class="input-field col s12 m6">
                <button class="btn waves-effect waves-light" type="submit" name="action"><i class="material-icons right">send</i>
                  Submit
                </button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>